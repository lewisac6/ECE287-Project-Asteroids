module title2 #(
    parameter WIDTH  = 80,  
    parameter HEIGHT = 10, 
    parameter SCALE  = 2   
)(
    input  wire [9:0] pixel_x,
    input  wire [9:0] pixel_y,

    input  wire [9:0] origin_x,
    input  wire [9:0] origin_y,

    output reg banner_r,
    output reg banner_g,
    output reg banner_b
);

    reg [8*WIDTH-1:0] ascii [0:HEIGHT-1];
    integer i;

    initial begin
        ascii[0] = " $$   $$   $$$$$      $$$$$$           $$$$$$   $$$$$$$  ";
        ascii[1] = " $$   $$  $$   $$    $$    $$         $$    $$  $$   $$  ";
        ascii[2] = " $$$ $$$  $$   $$    $$    $$  $$$$   $$    $$  $$$$$$   ";
        ascii[3] = " $$ $ $$  $$   $$    $$    $$         $$    $$  $$   $$  ";
        ascii[4] = " $$   $$   $$$$$      $$$$$$           $$$$$$   $$   $$  ";
        ascii[5] = "                                                         ";
        ascii[6] = "   $$$$$   $$$$$$$  $$$$$$$  $$$$$$   $$$$$$   $$$$$$    ";
        ascii[7] = "  $$   $$  $$      $$       $$    $$ $$    $$ $$    $$   ";
        ascii[8] = "  $$   $$  $$$$$   $$$$$    $$    $$ $$    $$ $$    $$   ";
        ascii[9] = "   $$$$$   $$      $$       $$$$$$   $$$$$$   $$$$$$     ";

        // pad unused rows with zeros (not really needed here)
        for (i = 10; i < HEIGHT; i = i + 1)
            ascii[i] = {8*WIDTH{1'b0}};
    end
	 
    localparam integer CELL_W = SCALE;
    localparam integer CELL_H = SCALE;

    wire ln2 =
        (pixel_x >= origin_x) &&
        (pixel_x <  origin_x + WIDTH  * CELL_W) &&
        (pixel_y >= origin_y) &&
        (pixel_y <  origin_y + HEIGHT * CELL_H);

    // Local pixel coords
    wire [9:0] local_x = pixel_x - origin_x;
    wire [9:0] local_y = pixel_y - origin_y;

    // Convert from pixel to character index (divide by SCALE)
    wire [9:0] sx = local_x / SCALE;  // 0..WIDTH-1
    wire [9:0] sy = local_y / SCALE;  // 0..HEIGHT-1

    reg [7:0] ch;

    always @* begin
        banner_r = 1'b0;
        banner_g = 1'b0;
        banner_b = 1'b0;

        if (ln2) begin
            // Extract 8-bit character from the string (MSB = leftmost char)
            ch = ascii[sy][(WIDTH-1-sx)*8 +: 8];

            // Any non-space char becomes a white pixel
            if (ch != " " && ch != 8'd0) begin
                banner_r = 1'b1;
                banner_g = 1'b1;
                banner_b = 1'b1;
            end
        end
    end

endmodule
